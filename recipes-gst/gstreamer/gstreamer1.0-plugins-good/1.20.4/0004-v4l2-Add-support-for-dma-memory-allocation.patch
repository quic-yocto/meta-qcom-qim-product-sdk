   res = gst_v4l2_allocator_dqbuf (pool->vallocator, &group);
-  if (res == GST_FLOW_EOS)
+  if (res == GST_FLOW_EOS || (group->buffer.flags & V4L2_BUF_FLAG_LAST))
     goto eos;
   if (res != GST_FLOW_OK)
